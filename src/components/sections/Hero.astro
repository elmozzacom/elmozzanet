import Button from "../ui/Button.astro";
---

<section class="hero" aria-labelledby="hero-title">
	<div class="container hero-grid">
		<div>
			<p class="eyebrow">Klinik Bidan Terpercaya</p>
			<h1 id="hero-title">Pendampingan Ibu dan Bayi yang Hangat, Aman, dan Profesional</h1>
			<p class="lead">
				Kami mendampingi perjalanan kehamilan hingga masa nifas melalui layanan kebidanan yang
				terstruktur dan berfokus pada kenyamanan keluarga.
			</p>
			<div class="button-group">
				<Button href="#jadwal" variant="primary">Lihat Jadwal Praktik</Button>
				<Button href="https://wa.me/6281234567890" target="_blank" variant="secondary">
					Konsultasi via WhatsApp
				</Button>
			</div>
		</div>
		<aside class="hero-highlight" aria-label="Informasi singkat klinik">
			<h2>Layanan Cepat Tanggap</h2>
			<ul>
				<li>Pemeriksaan kehamilan rutin</li>
				<li>Konseling laktasi dan MPASI</li>
