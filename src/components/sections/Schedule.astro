---
const schedules = [
	{ day: "Kamis", hour: "07.30 - 21.00", note: "Layanan kebidanan dan konsultasi." },
	{ day: "Jumat", hour: "07.30 - 21.00", note: "Layanan kebidanan dan konsultasi." },
	{ day: "Sabtu", hour: "07.30 - 21.00", note: "Layanan kebidanan dan konsultasi." },
	{ day: "Minggu", hour: "07.30 - 21.00", note: "Layanan kebidanan dan konsultasi." },
	{ day: "Senin", hour: "07.30 - 21.00", note: "Layanan kebidanan dan konsultasi." },
	{ day: "Selasa", hour: "07.30 - 21.00", note: "Layanan kebidanan dan konsultasi." },
	{ day: "Rabu", hour: "07.30 - 21.00", note: "Layanan kebidanan dan konsultasi." }
];
---

<section id="jadwal" class="section section-muted" aria-labelledby="schedule-title">
	<div class="container">
		<header class="section-heading">
			<p class="eyebrow">Jadwal Praktik</p>
			<h2 id="schedule-title">Jam Operasional Klinik El'Mozza</h2>
		</header>

		<div class="schedule-panel">
			<table class="schedule-table">
				<caption class="sr-only">Jadwal praktik Klinik El'Mozza</caption>
				<thead>
					<tr>
						<th scope="col">Hari</th>
						<th scope="col">Jam</th>
						<th scope="col">Catatan</th>
					</tr>
				</thead>
				<tbody>
					{
						schedules.map((item) => (
							<tr>
								<th scope="row">{item.day}</th>
								<td>{item.hour}</td>
								<td>{item.note}</td>
							</tr>
						))
					}
				</tbody>
			</table>
		</div>
	</div>
</section>
